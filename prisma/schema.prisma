generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DesignConsultant {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())

  vehicles Vehicle[]
}

model Vehicle {
  id           String   @id @default(cuid())
  year         Int
  make         String
  model        String
  vehicleNumber String?
  consultantId String
  qrCodeUrl    String?
  createdAt    DateTime @default(now())

  consultant DesignConsultant @relation(fields: [consultantId], references: [id], onDelete: Cascade)
  leads      Lead[]

  @@index([consultantId])
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  address     String
  windowCount String
  message     String?
  vehicleId   String
  createdAt   DateTime @default(now())

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@index([vehicleId])
  @@index([email])
  @@index([createdAt])
}
